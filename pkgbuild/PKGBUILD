# Maintainer: Bruno Goncalves <bigbruno@gmail.com>

pkgname=sync-gnome-theme-to-qt
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('GPL')
depends=('big-theme-colloided-adwaita' 'adw-gtk3' 'kvantum' 'kvantum-qt5' 'qadwaitadecorations-qt5' 'qadwaitadecorations-qt6')
conflicts=('kvantum-theme-libadwaita-git')
url="https://github.com/biglinux/$pkgname"
pkgdesc="Sync Gnome theme to QT"
source=("git+${url}.git")
md5sums=(SKIP)
install=sync-gnome-theme-to-qt.install

package() {
    # Verify default folder
    if [ -d "${srcdir}/${pkgname}/${pkgname}" ]; then
        InternalDir="${srcdir}/${pkgname}/${pkgname}"
    else
        InternalDir="${srcdir}/${pkgname}"
    fi


    # Copy files
    if [ -d "${InternalDir}/usr" ]; then
        cp -r "${InternalDir}/usr" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/etc" ]; then
        cp -r "${InternalDir}/etc" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/opt" ]; then
        cp -r "${InternalDir}/opt" "${pkgdir}/"
    fi
}
